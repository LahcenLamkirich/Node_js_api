<!DOCTYPE html>
<html>
<head>
    <title> GESTION DES UTILISATEURS </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        .container {
            padding: 0%;
        }
    </style>
</head>
<body>
</br>
    <div class="container">
        <h2 style="text-align: center; text-decoration: underline;"><%= title %> </h2></br>
        <a href="/add" class="btn btn-sm btn-primary"> Add User </a></br> <br>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                 <% user.forEach(function(user){ %> 
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.password %></td>
                        <td><%= user.role %></td>
                        <td>
                            <a href="/edit/<%= user.id %>" class="btn btn-sm btn-primary"> Edit </a> 
                            <a href="/delete/<%= user.id %>" class="btn btn-sm btn-danger"> Delete </a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody> 
        </table>
    </div>
</body>
</html>